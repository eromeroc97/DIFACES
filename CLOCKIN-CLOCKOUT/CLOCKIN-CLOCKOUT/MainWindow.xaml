<Window x:Class="CLOCKIN_CLOCKOUT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLOCKIN_CLOCKOUT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="CLOCK IN - CLOCK OUT" HorizontalAlignment="Left" Margin="23,26,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="btnStart" Content="START" HorizontalAlignment="Left" Margin="106,98,0,0" VerticalAlignment="Top" Width="116" FontSize="24" FontWeight="Bold" Height="86" Click="BtnStart_Click"/>
        <Button x:Name="bntEnd" Content="END" HorizontalAlignment="Left" Margin="106,252,0,0" VerticalAlignment="Top" Width="116" FontSize="24" FontWeight="Bold" Height="86"/>
        <DataGrid HorizontalAlignment="Left" Height="330" Margin="338,26,0,0" VerticalAlignment="Top" Width="412">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="EMPLOYEE" Width="*"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="CHECKED IN SINCE..." Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
