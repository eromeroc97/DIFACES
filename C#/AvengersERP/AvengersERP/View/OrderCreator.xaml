        xmlns:local="clr-namespace:AvengersERP.View"
        mc:Ignorable="d"
        Title="OrderCreator" Height="450" Width="800">
    <Grid>
        <Button Content="Add Products" HorizontalAlignment="Left" Margin="74,226,0,0" VerticalAlignment="Top" Width="140"/>
        <Button Content="Delete Products" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="74,298,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="74,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Order name" HorizontalAlignment="Left" Margin="74,34,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="74,158,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Products" HorizontalAlignment="Left" Margin="74,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.039,0.494" Width="140" Height="30"/>
        <ListView HorizontalAlignment="Left" Height="311" Margin="462,73,0,0" VerticalAlignment="Top" Width="301">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Products List" HorizontalAlignment="Left" Margin="462,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.964,0.575"/>
        <ListBox HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Label Content="Customers" HorizontalAlignment="Left" Margin="274,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.143,0.592" Width="102"/>
        <ComboBox HorizontalAlignment="Left" Margin="274,158,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="243,360,0,0" VerticalAlignment="Top" Width="90"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="369,360,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
